@model IEnumerable<CheckMateQA.Models.Company>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<a asp-controller="Company" asp-action="Create" class="btn btn-primary mb-3">Nuevo</a>


<table class="table table-hover">
    <thead>
        <tr class="table-dark">
            <th>#</th>
            <th>@Html.DisplayNameFor(x => x.Name)</th>
            <th>@Html.DisplayNameFor(x => x.Description)</th>
            <th>@Html.DisplayNameFor(x => x.Enabled)</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(x => item.Id)</td>
                <td>@Html.DisplayFor(x => item.Name)</td>
                <td>@Html.DisplayFor(x => item.Description)</td>
                <td>@Html.DisplayFor(x => item.Enabled)</td>
                <td></td>
            </tr>
        }
    </tbody>
</table>

@if (Model.Count() == 0)
{
    <div class="alert alert-info" role="alert">
        No existen registros para mostrar
    </div>
}